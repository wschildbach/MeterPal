<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="de.franken.fermi.myfirstapp"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="8"
        android:targetSdkVersion="17" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name="de.franken.fermi.myfirstapp.RecordCounterActivity"
            android:label="@string/title_activity_record_counter" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="de.franken.fermi.myfirstapp.NewMeterActivity"
            android:label="@string/title_activity_new_meter" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="de.franken.fermi.myfirstapp.NewMeterActivity" />
        </activity>
        <activity
            android:name="de.franken.fermi.myfirstapp.MainActivity"
            android:label="@string/app_name" >
        </activity>
        <activity
            android:name="de.franken.fermi.myfirstapp.DisplayMessageActivity"
            android:label="@string/title_activity_display_message"
            android:parentActivityName="de.franken.fermi.myfirstapp.MainActivity" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="de.franken.fermi.myfirstapp.MainActivity" />
        </activity>
    </application>

</manifest>